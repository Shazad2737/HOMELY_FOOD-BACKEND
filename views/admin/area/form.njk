{% extends "../layouts/master.njk" %}

{% block container %}
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <div class="d-flex flex-column flex-column-fluid">
            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar pt-2 pt-lg-10">
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">
                                {% if area %}Edit{% else %}Add{% endif %} Area
                            </h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/location/area" class="text-muted text-hover-primary">Areas</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    {% if area %}Edit{% else %}Add{% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Toolbar-->

            <!--begin::Content-->
            <div id="kt_app_content" class="app-content flex-column-fluid">
                <div id="kt_app_content_container" class="app-container container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Area Information</h3>
                        </div>

                        <form id="kt_area_form"
                            class="form es-form"
                            action="/admin/location/area/save"
                            data-redirect-url="/admin/location/area"
                            method="POST"
                            autocomplete="off">

                            <!-- Empty for Add -->
                            <input type="hidden" name="id" value="{{ area.id }}">

                            <div class="card-body">
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Area Name</label>
                                    <div class="col-lg-9">
                                        <input type="text" name="name" class="form-control form-control-lg form-control-solid" 
                                               placeholder="Enter area name" value="{{ area.name if area else '' }}" required/>
                                        <div id="field-error-name" class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Location</label>
                                    <div class="col-lg-9">
                                        <select name="locationId" class="form-select form-select-solid form-select-lg" data-control="select2" 
                                                data-placeholder="Select location" required>
                                            <option value="">Select location...</option>
                                            {% for location in locations %}
                                                <option value="{{ location.id }}" {% if area and area.locationId == location.id %}selected{% endif %}>
                                                    {{ location.name }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                        <div id="field-error-locationId" class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">
                                        Coordinates
                                        <span class="ms-1" data-bs-toggle="tooltip" title="GPS coordinates for the area">
                                            <i class="ki-outline ki-information-5 text-gray-500 fs-6"></i>
                                        </span>
                                    </label>
                                    <div class="col-lg-9">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <input type="text" name="latitude" class="form-control form-control-lg form-control-solid" 
                                                       placeholder="Latitude (e.g., 25.2048)" value="{{ area.latitude if area else '' }}"/>
                                                <div class="form-text">Latitude coordinate</div>
                                            </div>
                                            <div class="col-md-6">
                                                <input type="text" name="longitude" class="form-control form-control-lg form-control-solid" 
                                                       placeholder="Longitude (e.g., 55.2708)" value="{{ area.longitude if area else '' }}"/>
                                                <div class="form-text">Longitude coordinate</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                <a href="/admin/location/area" class="btn btn-light btn-active-light-primary me-2">Cancel</a>
                                <button type="submit" class="btn btn-primary form-submit-btn" id="submit_btn">
                                    <span class="indicator-label label">
                                        {% if area %}Update{% else %}Create{% endif %} Area</span>
                                    <span class="preloader indicator-progress d-nones">Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--end::Content-->
        </div>

        <!--begin::Footer-->
        {% include '../partials/_footer-panel.njk' %}
        <!--end::Footer-->
    </div>
{% endblock %}

{% block customScript %}
    <script src="/admin/common/es-form.js"></script>
    <script src="/admin/common/form-data-json.min.js"></script>
{% endblock %}