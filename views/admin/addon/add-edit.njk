{% extends "../layouts/master.njk" %}

{% block container %}
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <div class="d-flex flex-column flex-column-fluid">
            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar pt-2 pt-lg-10">
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">
                                {% if addOn %}Edit{% else %}Add{% endif %} Add-on
                            </h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/addon" class="text-muted text-hover-primary">Add-ons</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    {% if addOn %}Edit{% else %}Add{% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Toolbar-->

            <!--begin::Content-->
            <div id="kt_app_content" class="app-content flex-column-fluid">
                <div id="kt_app_content_container" class="app-container container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Add-on Information</h3>
                        </div>

                        <form id="addon_form" class="form">
                            <div class="card-body">
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Add-on Name</label>
                                    <div class="col-lg-9">
                                        <input type="text" name="name" class="form-control form-control-lg form-control-solid" 
                                               placeholder="Enter add-on name (e.g., Chutney, Sambar, Vada)" 
                                               value="{{ addOn.name if addOn else '' }}" required/>
                                        <div class="form-text">Unique name for the add-on</div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">Description</label>
                                    <div class="col-lg-9">
                                        <textarea name="description" class="form-control form-control-lg form-control-solid" 
                                                  rows="3" placeholder="Enter description (optional)">{{ addOn.description if addOn else '' }}</textarea>
                                        <div class="form-text">Brief description of the add-on</div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Price</label>
                                    <div class="col-lg-9">
                                        <div class="input-group input-group-lg input-group-solid">
                                            <span class="input-group-text">â‚¹</span>
                                            <input type="number" name="price" class="form-control form-control-lg form-control-solid" 
                                                   placeholder="0.00" step="0.01" min="0" 
                                                   value="{{ addOn.price if addOn else '' }}" required/>
                                        </div>
                                        <div class="form-text">Price for this add-on</div>
                                    </div>
                                </div>

                                {% if addOn %}
                                    <div class="row mb-6">
                                        <label class="col-lg-3 col-form-label fw-semibold fs-6">Usage Information</label>
                                        <div class="col-lg-9">
                                            <div class="notice d-flex bg-light-info rounded border-info border border-dashed p-6">
                                                <i class="ki-outline ki-information fs-2tx text-info me-4"></i>
                                                <div class="d-flex flex-stack flex-grow-1">
                                                    <div class="fw-semibold">
                                                        <div class="fs-6 text-gray-700">
                                                        This add-on is currently associated with 
                                                        <span class="fw-bold">{{ addOn._count.foodItems if addOn._count else 0 }} food item(s)</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                <a href="/admin/addon" class="btn btn-light btn-active-light-primary me-2">Cancel</a>
                                <button type="submit" class="btn btn-primary" id="submit_btn">
                                    <span class="indicator-label">
                                        {% if addOn %}Update{% else %}Create{% endif %} Add-on</span>
                                    <span class="indicator-progress">Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--end::Content-->
        </div>

        <!--begin::Footer-->
        {% include '../partials/_footer-panel.njk' %}
        <!--end::Footer-->
    </div>
{% endblock %}

{% block customScript %}{% endblock %}