{% extends "../layouts/master.njk" %}

{% block container %}
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <div class="d-flex flex-column flex-column-fluid">
            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar pt-2 pt-lg-10">
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">
                                {% if notification %}Edit{% else %}Add{% endif %} Notification
                            </h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/notification" class="text-muted text-hover-primary">Notifications</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    {% if notification %}Edit{% else %}Add{% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Toolbar-->

            <!--begin::Content-->
            <div id="kt_app_content" class="app-content flex-column-fluid">
                <div id="kt_app_content_container" class="app-container container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Notification Information</h3>
                        </div>

                        <form id="kt_notification_form" action="/admin/notification/save" data-redirect-url="/admin/notification/" method="POST" class="es-form" novalidate="novalidate">
                            <input type="hidden" name="id" value="{{ notification.id if notification else '' }}">

                            <div class="card-body">
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Caption</label>
                                    <div class="col-lg-9">
                                        <input type="text" name="caption" class="form-control form-control-lg form-control-solid" 
                                               placeholder="Enter notification caption" value="{{ notification.caption if notification else '' }}" required/>
                                        <div id="field-error-caption" class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">Description</label>
                                    <div class="col-lg-9">
                                        <textarea name="description" class="form-control form-control-lg form-control-solid" 
                                                  rows="4" placeholder="Enter notification description">{{ notification.description if notification else '' }}</textarea>
                                        <div class="form-text">Detailed message for the notification</div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">Type</label>
                                    <div class="col-lg-9">
                                        <select name="type" class="form-select form-select-solid" data-control="select2" 
                                                data-placeholder="Select notification type">
                                            <option value="GENERAL" {% if notification and notification.type == 'GENERAL' %}selected{% endif %}>General</option>
                                            <option value="ALERT" {% if notification and notification.type == 'ALERT' %}selected{% endif %}>Alert</option>
                                            <option value="PROMOTION" {% if notification and notification.type == 'PROMOTION' %}selected{% endif %}>Promotion</option>
                                            <option value="ANNOUNCEMENT" {% if notification and notification.type == 'ANNOUNCEMENT' %}selected{% endif %}>Announcement</option>
                                            <option value="SYSTEM" {% if notification and notification.type == 'SYSTEM' %}selected{% endif %}>System</option>
                                        </select>
                                        <div class="form-text">Select the type of notification</div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">Notification Image</label>
                                    <div class="col-lg-9">
                                        <div class="card card-flush mb-4">
                                            <div class="card-body text-center">
                                                <div class="dropzone dropzone-single" id="notificationImageDropzone">
                                                    <div class="dz-message needsclick">
                                                        <i class="ki-outline ki-file-up text-primary fs-3x"></i>
                                                        <div class="ms-4">
                                                            <h3 class="fs-5 fw-bold text-gray-900 mb-1">
                                                                Drop notification image here or click to upload.
                                                            </h3>
                                                            <span class="fs-7 fw-semibold text-gray-500">
                                                                Only one image allowed (optional)
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Hidden input for storing uploaded image URL -->
                                                <input type="hidden" name="imageUrl" id="notificationImageUrl" value="{{ notification.imageUrl if notification else '' }}">
                                                <div id="field-error-imageUrl" class="fv-plugins-message-container invalid-feedback"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">Send Immediately</label>
                                    <div class="col-lg-9">
                                        <div class="form-check form-switch form-check-custom form-check-solid">
                                            <input class="form-check-input" type="checkbox" name="sendNow" id="sendNow" 
                                                   {% if not notification %}checked{% endif %}/>
                                            <label class="form-check-label" for="sendNow">
                                                Send notification immediately after saving
                                            </label>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                <a href="/admin/notification" class="btn btn-light btn-active-light-primary me-2">Cancel</a>
                                <button type="submit" class="btn btn-primary form-submit-btn" id="submit_btn">
                                    <span class="indicator-label label">
                                        {% if notification %}Update{% else %}Create{% endif %} Notification</span>
                                    <span class="preloader indicator-progress d-none">Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--end::Content-->
        </div>

        <!--begin::Footer-->
        {% include '../partials/_footer-panel.njk' %}
        <!--end::Footer-->
    </div>
{% endblock %}

{% block customScript %}
    <script src="/admin/common/es-form.js"></script>
    <script src="/admin/common/form-data-json.min.js"></script>
    <script src="/admin/common/single-image-dropzone.js"></script>
    <script src="/admin/custom/notification-image-dropzone.js"></script>
{% endblock %}