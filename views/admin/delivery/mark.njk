{% extends "../layouts/master.njk" %}
{% block container %}
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <div
            class="d-flex flex-column flex-column-fluid">
            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar pt-2 pt-lg-10">
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">
                                Delivery Marking
                            </h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">Delivery Marking</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Toolbar-->
            <!--begin::Content-->
            <div id="kt_app_content" class="app-content flex-column-fluid">
                <div id="kt_app_content_container" class="app-container container-fluid">
                    <div
                        class="card card-flush">
                        <!--begin::Card header-->
                        <div class="card-header align-items-center py-5">
                            <div
                                class="card-toolbar flex-row-fluid justify-content-between gap-3">
                                <!--begin::Left Filters-->
                                <div
                                    class="d-flex flex-wrap align-items-center gap-3">
                                    <!--begin::Date Navigation-->
                                    <div class="btn-group">
                                        <button type="button" id="prev_day_btn" class="btn btn-sm btn-light-primary">
                                            <i class="ki-outline ki-arrow-left fs-3"></i>
                                        </button>
                                        <button type="button" id="today_btn" class="btn btn-sm btn-primary">
                                            <i class="ki-outline ki-calendar-tick fs-3 me-1"></i>
                                            Today
                                        </button>
                                        <button type="button" id="next_day_btn" class="btn btn-sm btn-light-primary">
                                            <i class="ki-outline ki-arrow-right fs-3"></i>
                                        </button>
                                    </div>
                                    <!--end::Date Navigation-->
                                    <!--begin::Date Range-->
                                    <div class="mw-200px">
                                        <input
                                            type="text"
                                            id="date_range_filter"
                                            class="form-control form-control-solid"
                                            placeholder="Select date range"
                                            readonly="readonly"></div>
                                        <!--end::Date Range-->
                                        <!--begin::Search-->
                                        <div class="mw-250px">
                                            <div class="d-flex align-items-center position-relative">
                                                <i class="ki-outline ki-magnifier fs-3 position-absolute ms-4"></i>
                                                <input
                                                    type="text"
                                                    data-kt-delivery-filter="search"
                                                    class="form-control form-control-solid ps-12"
                                                    placeholder="Search order, customer..."></div>
                                            </div>
                                            <!--end::Search-->
                                            <!--begin::MealType-->
                                            <div class="mw-150px">
                                                <select
                                                    id="delivery_mealtype_filter"
                                                    class="form-select form-select-solid"
                                                    data-control="select2"
                                                    data-hide-search="true"
                                                    data-placeholder="Meal Type">
                                                    <option></option>
                                                    <option value="0">All Meal Types</option>
                                                </select>
                                            </div>
                                            <!--end::MealType-->
                                            <!--begin::Status-->
                                            <div class="mw-150px">
                                                <select
                                                    id="delivery_status_filter"
                                                    class="form-select form-select-solid"
                                                    data-control="select2"
                                                    data-hide-search="true"
                                                    data-placeholder="Status">
                                                    <option></option>
                                                    <option value="0">All Status</option>
                                                    <option value="PENDING">Pending</option>
                                                    <option value="DELIVERED">Delivered</option>
                                                </select>
                                            </div>
                                            <!--end::Status-->
                                            <!--begin::Clear-->
                                            <button id="clear_filters_btn" class="btn btn-icon btn-light" title="Clear filter">
                                                <span class="svg-icon svg-icon-2">
                                                    <svg width="24" height="24" fill="none">
                                                        <rect
                                                            opacity="0.5"
                                                            x="7.05"
                                                            y="15.53"
                                                            width="12"
                                                            height="2"
                                                            rx="1"
                                                            transform="rotate(-45 7.05 15.53)"
                                                            fill="currentColor"/>
                                                        <rect x="8.46" y="7.05" width="12" height="2" rx="1" transform="rotate(45 8.46 7.05)" fill="currentColor"/>
                                                    </svg>
                                                </span>
                                            </button>
                                            <!--end::Clear-->
                                        </div>
                                        <!--end::Left Filters-->
                                        <!--begin::Right Actions-->
                                        <div
                                            class="d-flex align-items-center gap-2 flex-shrink-0">
                                            <!--begin::Mark All-->
                                            <button
                                                id="mark_all_delivered_btn"
                                                class="btn btn-icon btn-success"
                                                data-bs-toggle="tooltip"
                                                data-bs-placement="top"
                                                title="Mark All as Delivered">
                                                <i class="ki-outline ki-check-circle fs-2"></i>
                                            </button>
                                            <!--end::Mark All-->
                                            <!--begin::Refresh-->
                                            <button
                                                id="refresh_btn"
                                                class="btn btn-icon btn-light"
                                                data-bs-toggle="tooltip"
                                                data-bs-placement="top"
                                                title="Refresh">
                                                <i class="ki-outline ki-arrows-circle fs-2"></i>
                                            </button>
                                            <!--end::Refresh-->
                                        </div>
                                        <!--end::Right Actions-->
                                    </div>
                                </div>
                                <!--end::Card header-->
                                <!--begin::Card body-->
                                <div
                                    class="card-body pt-0">
                                    <!--begin::Summary-->
                                    <div class="row g-5 mb-7">
                                        <div class="col-sm-6 col-xl-4">
                                            <div class="card card-flush border border-dashed border-gray-300 h-100">
                                                <div class="card-body text-center">
                                                    <i class="ki-outline ki-burger-menu-3 fs-2x text-primary mb-3"></i>
                                                    <div class="fs-6 text-gray-800 fw-bold">Total Items</div>
                                                    <div class="fs-2hx fw-bold text-gray-900" id="total_items">0</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-xl-4">
                                            <div class="card card-flush border border-dashed border-gray-300 h-100">
                                                <div class="card-body text-center">
                                                    <i class="ki-outline ki-time fs-2x text-warning mb-3"></i>
                                                    <div class="fs-6 text-gray-800 fw-bold">Pending</div>
                                                    <div class="fs-2hx fw-bold text-gray-900" id="pending_items">0</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-xl-4">
                                            <div class="card card-flush border border-dashed border-gray-300 h-100">
                                                <div class="card-body text-center">
                                                    <i class="ki-outline ki-check-circle fs-2x text-success mb-3"></i>
                                                    <div class="fs-6 text-gray-800 fw-bold">Delivered</div>
                                                    <div class="fs-2hx fw-bold text-gray-900" id="delivered_items">0</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end::Summary-->
                                    <!--begin::Table-->
                                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="delivery_table">
                                        <thead>
                                            <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                                                <th class="w-10px pe-2">
                                                    <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                                        <input class="form-check-input" type="checkbox" id="select_all_checkbox"></div>
                                                    </th>
                                                    <th class="min-w-100px">Order #</th>
                                                    <th class="min-w-150px">Customer</th>
                                                    <th class="min-w-120px">Meal Type</th>
                                                    <th class="min-w-150px">Food Item</th>
                                                    <th class="min-w-150px">Delivery Location</th>
                                                    {# <th class="min-w-80px">Qty</th> #}
                                                    <th class="min-w-100px">Status</th>
                                                    <th class="text-center min-w-100px">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody class="fw-semibold text-gray-600"></tbody>
                                        </table>
                                        <!--end::Table-->
                                    </div>
                                    <!--end::Card body-->
                                </div>
                            </div>
                        </div>
                        <!--end::Content-->
                    </div>
                    <!--begin::Footer-->
                    {% include '../partials/_footer-panel.njk' %}
                    <!--end::Footer-->
                </div>
            {% endblock %}
            {% block customScript %}
                <script src="/admin/custom/delivery-mark.js"></script>
            {% endblock %}