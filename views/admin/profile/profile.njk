{% extends "../layouts/master.njk" %}

{% block container %}
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <div class="d-flex flex-column flex-column-fluid">
            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar pt-2 pt-lg-10">
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">
                                My Profile
                            </h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">Profile</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Toolbar-->

            <!--begin::Content-->
            <div id="kt_app_content" class="app-content flex-column-fluid">
                <div id="kt_app_content_container" class="app-container container-fluid">
                    <div class="row g-5 g-xl-8">
                        <!--begin::Profile Card-->
                        <div class="col-xl-4">
                            <div class="card card-flush h-xl-100">
                                <div class="card-header pt-7">
                                    <h3 class="card-title align-items-start flex-column">
                                        <span class="card-label fw-bold text-gray-800">Profile Details</span>
                                        <span class="text-gray-500 mt-1 fw-semibold fs-6">Your account information</span>
                                    </h3>
                                </div>

                                <div class="card-body pt-5">
                                    <!--begin::User-->
                                    <div class="d-flex flex-column text-center mb-9">
                                        {# <div class="symbol symbol-75px symbol-circle mb-5">
                                            <span class="symbol-label bg-light-primary text-primary fs-2x fw-bold">
                                                {{ admin.name }}
                                            </span>
                                        </div> #}
                                        <div class="fs-3 text-gray-800 fw-bold mb-1">{{ admin.name }}</div>
                                        <div class="fs-5 fw-semibold text-gray-500 mb-3">{{ admin.email }}</div>

                                        <!--begin::Role Badge-->
                                        <div class="d-flex justify-content-center">
                                            {% if admin.role == 'SUPER_ADMIN' %}
                                                <span class="badge badge-light-danger fw-bold fs-7 px-4 py-2">Super Admin</span>
                                            {% elif admin.role == 'BRAND_ADMIN' %}
                                                <span class="badge badge-light-primary fw-bold fs-7 px-4 py-2">Brand Admin</span>
                                            {% elif admin.role == 'DELIVERY_MANAGER' %}
                                                <span class="badge badge-light-info fw-bold fs-7 px-4 py-2">Delivery Manager</span>
                                            {% elif admin.role == 'DELIVERY_STAFF' %}
                                                <span class="badge badge-light-success fw-bold fs-7 px-4 py-2">Delivery Staff</span>
                                            {% endif %}
                                        </div>
                                        <!--end::Role Badge-->
                                    </div>
                                    <!--end::User-->

                                    <!--begin::Info-->
                                    <div class="separator separator-dashed mb-7"></div>

                                    <div class="mb-7">
                                        {# <div class="d-flex align-items-center mb-4">
                                            <div class="symbol symbol-40px me-4">
                                                <span class="symbol-label bg-light-success">
                                                    <i class="ki-outline ki-user fs-2 text-success"></i>
                                                </span>
                                            </div>
                                            <div class="d-flex flex-column">
                                                <span class="text-gray-500 fs-7 fw-semibold">Admin ID</span>
                                                <span class="text-gray-800 fs-6 fw-bold">{{ admin.id }}</span>
                                            </div>
                                        </div> #}

                                        {# {% if admin.brand %}
                                            <div class="d-flex align-items-center mb-4">
                                                <div class="symbol symbol-40px me-4">
                                                    <span class="symbol-label bg-light-primary">
                                                        <i class="ki-outline ki-shop fs-2 text-primary"></i>
                                                    </span>
                                                </div>
                                                <div class="d-flex flex-column">
                                                    <span class="text-gray-500 fs-7 fw-semibold">Brand</span>
                                                    <span class="text-gray-800 fs-6 fw-bold">{{ admin.brand.name }}</span>
                                                </div>
                                            </div>
                                        {% endif %} #}
                                        {# 
                                        {% if admin.location %}
                                            <div class="d-flex align-items-center mb-4">
                                                <div class="symbol symbol-40px me-4">
                                                    <span class="symbol-label bg-light-info">
                                                        <i class="ki-outline ki-geolocation fs-2 text-info"></i>
                                                    </span>
                                                </div>
                                                <div class="d-flex flex-column">
                                                    <span class="text-gray-500 fs-7 fw-semibold">Location</span>
                                                    <span class="text-gray-800 fs-6 fw-bold">{{ admin.location.name }}</span>
                                                </div>
                                            </div>
                                        {% endif %} #}

                                        <div class="d-flex align-items-center mb-4">
                                            <div class="symbol symbol-40px me-4">
                                                <span class="symbol-label bg-light-warning">
                                                    <i class="ki-outline ki-calendar fs-2 text-warning"></i>
                                                </span>
                                            </div>
                                            <div class="d-flex flex-column">
                                                <span class="text-gray-500 fs-7 fw-semibold">Member Since</span>
                                                <span class="text-gray-800 fs-6 fw-bold">{{ formatDateInTimezone(admin.createdAt) }}</span>
                                            </div>
                                        </div>

                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-40px me-4">
                                                <span class="symbol-label {% if admin.isActive %}bg-light-success{% else %}bg-light-danger{% endif %}">
                                                    <i class="ki-outline {% if admin.isActive %}ki-check-circle{% else %}ki-cross-circle{% endif %} fs-2 {% if admin.isActive %}text-success{% else %}text-danger{% endif %}"></i>
                                                </span>
                                            </div>
                                            <div class="d-flex flex-column">
                                                <span class="text-gray-500 fs-7 fw-semibold">Status</span>
                                                <span class="{% if admin.isActive %}text-success{% else %}text-danger{% endif %} fs-6 fw-bold">
                                                    {% if admin.isActive %}Active{% else %}Inactive{% endif %}
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end::Info-->
                                </div>
                            </div>
                        </div>
                        <!--end::Profile Card-->

                        <!--begin::Profile Form & Security-->
                        <div class="col-xl-8">
                            <!--begin::Profile Form-->
                            <div class="card card-flush mb-5">
                                <div class="card-header pt-7">
                                    <h3 class="card-title align-items-start flex-column">
                                        <span class="card-label fw-bold text-gray-800">Edit Profile</span>
                                        <span class="text-gray-500 mt-1 fw-semibold fs-6">Update your personal information</span>
                                    </h3>
                                </div>

                                <form id="kt_profile_form"
                                    class="form es-form"
                                    action="/admin/profile/update"
                                    data-redirect-url="/admin/profile"
                                    method="POST"
                                    autocomplete="off">

                                    <input type="hidden" name="id" value="{{ admin.id }}">

                                    <div class="card-body">
                                        <!--begin::Name-->
                                        <div class="row mb-6">
                                            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Full Name</label>
                                            <div class="col-lg-8">
                                                <input type="text" 
                                                    name="name" 
                                                    class="form-control form-control-lg form-control-solid" 
                                                    placeholder="Enter your name" 
                                                    value="{{ admin.name }}" 
                                                    required/>
                                                <div id="field-error-name" class="fv-plugins-message-container invalid-feedback"></div>
                                            </div>
                                        </div>
                                        <!--end::Name-->

                                        <!--begin::Email-->
                                        <div class="row mb-6">
                                            <label class="col-lg-4 col-form-label required fw-semibold fs-6">Email Address</label>
                                            <div class="col-lg-8">
                                                <input type="email" 
                                                    name="email" 
                                                    class="form-control form-control-lg form-control-solid" 
                                                    placeholder="Enter your email" 
                                                    value="{{ admin.email }}" 
                                                    required/>
                                                <div class="form-text">Your email address is used for login</div>
                                                <div id="field-error-email" class="fv-plugins-message-container invalid-feedback"></div>
                                            </div>
                                        </div>
                                        <!--end::Email-->
                                    </div>

                                    <div class="card-footer d-flex justify-content-end py-6">
                                        <button type="reset" class="btn btn-light btn-active-light-primary me-2">Discard</button>
                                        <button type="submit" class="btn btn-primary form-submit-btn">
                                            <span class="indicator-label label">Save Changes</span>
                                            <span class="preloader indicator-progress d-none">Please wait...
                                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <!--end::Profile Form-->

                            <!--begin::Security Card-->
                            <div class="card card-flush">
                                <div class="card-header pt-7">
                                    <h3 class="card-title align-items-start flex-column">
                                        <span class="card-label fw-bold text-gray-800">Security Settings</span>
                                        <span class="text-gray-500 mt-1 fw-semibold fs-6">Manage your account security</span>
                                    </h3>
                                </div>

                                <div class="card-body">
                                    <!--begin::Password-->
                                    <div class="d-flex flex-stack py-5 border-bottom border-gray-300">
                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-50px me-5">
                                                <span class="symbol-label bg-light-primary">
                                                    <i class="ki-outline ki-lock fs-2x text-primary"></i>
                                                </span>
                                            </div>
                                            <div class="d-flex flex-column">
                                                <a href="/admin/profile/change-password" class="fs-5 text-gray-800 text-hover-primary fw-bold">Password</a>
                                                {# <div class="fs-6 fw-semibold text-gray-500">
                                                    Last changed: {{ formatDateInTimezone(admin.updatedAt) }}
                                                </div> #}
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-end">
                                            <a href="/admin/profile/change-password" class="btn btn-sm btn-light-primary">
                                                <i class="ki-outline ki-key fs-4 me-1"></i>
                                                Change Password
                                            </a>
                                        </div>
                                    </div>
                                    <!--end::Password-->
                                </div>
                            </div>
                            <!--end::Security Card-->
                        </div>
                        <!--end::Profile Form & Security-->
                    </div>
                </div>
            </div>
            <!--end::Content-->
        </div>

        <!--begin::Footer-->
        {% include '../partials/_footer-panel.njk' %}
        <!--end::Footer-->
    </div>
{% endblock %}

{% block customScript %}
    <script src="/admin/common/es-form.js"></script>
    <script src="/admin/common/form-data-json.min.js"></script>
{% endblock %}