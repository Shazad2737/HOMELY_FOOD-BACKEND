{% extends "../layouts/master.njk" %}

{% block container %}
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <div class="d-flex flex-column flex-column-fluid">
            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar pt-2 pt-lg-10">
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">All Food Items</h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">Food Items</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Toolbar-->

            <!--begin::Content-->
            <div id="kt_app_content" class="app-content flex-column-fluid">
                <div id="kt_app_content_container" class="app-container container-fluid">
                    <div class="card card-flush">
                        <!--begin::Card header-->
                        <div class="card-header align-items-center py-5 gap-2 gap-md-5 flex-wrap">
                            <!-- Search -->
                            <div class="card-title flex-column flex-sm-row w-100 w-sm-auto">
                                <div class="d-flex align-items-center position-relative my-1 w-100 w-sm-auto">
                                    <i class="ki-outline ki-magnifier fs-3 position-absolute ms-4"></i>
                                    <input
                                        type="text"
                                        data-kt-fooditem-filter="search"
                                        class="form-control form-control-solid ps-12 w-100 w-sm-250px"
                                        placeholder="Search food item"
/>
                                </div>
                            </div>

                            <!-- Toolbar -->
                            <div class="card-toolbar d-flex flex-wrap flex-sm-nowrap justify-content-end align-items-center gap-3 w-100 w-sm-auto mt-3 mt-sm-0">

                                <!-- Status Filter -->
                                <div class="w-100 w-sm-auto mw-150px">
                                    <select
                                        id="fooditem_status_filter"
                                        class="form-select form-select-solid"
                                        data-control="select2"
                                        data-hide-search="true"
                                    >
                                        <option value="">All Status</option>
                                        <option value="active">Active</option>
                                        <option value="inactive">Inactive</option>
                                    </select>
                                </div>

                                <!-- Meal Type Filter + Clear -->
                                <div class="d-flex align-items-center gap-2 w-100 w-sm-auto mw-200px">
                                    <select
                                        id="fooditem_mealtype_filter"
                                        class="form-select form-select-solid flex-grow-1"
                                        data-control="select2"
                                        data-placeholder="Meal Type"
                                    >
                                        <option value="">All Meal Types</option>
                                    </select>

                                    <button
                                        id="clear_mealtype_filter"
                                        class="btn btn-icon btn-light"
                                        title="Clear filter"
                                    >
                                        <span class="svg-icon svg-icon-2">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <rect opacity="0.5" x="7.05025" y="15.5356" width="12" height="2"
                                                    rx="1" transform="rotate(-45 7.05025 15.5356)" fill="currentColor"/>
                                                <rect x="8.46447" y="7.05029" width="12" height="2" rx="1"
                                                    transform="rotate(45 8.46447 7.05029)" fill="currentColor"/>
                                            </svg>
                                        </span>
                                    </button>
                                </div>

                                <!-- Add Button -->
                                <a href="/admin/fooditem/add" class="btn btn-primary w-100 w-sm-auto">
                                    <i class="ki-outline ki-plus fs-2"></i>
                                    Add Food Item
                                </a>
                            </div>
                        </div>

                        <!--end::Card header-->

                        <!--begin::Card body-->
                        <div class="card-body pt-0">
                            <table class="table align-middle table-row-dashed fs-6 gy-5" id="fooditem_table">
                                <thead>
                                    <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                                        <th class="min-w-200px">Food Item</th>
                                        <th class="min-w-100px">Code</th>
                                        <th class="min-w-100px">Meal Type</th>
                                        <th class="min-w-100px">Type</th>
                                        <th class="min-w-70px">Status</th>
                                        <th class="text-center min-w-100px">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="fw-semibold text-gray-600"></tbody>
                            </table>
                        </div>
                        <!--end::Card body-->
                    </div>
                </div>
            </div>
            <!--end::Content-->
        </div>

        <!--begin::Footer-->
        {% include '../partials/_footer-panel.njk' %}
        <!--end::Footer-->
    </div>
{% endblock %}

{% block customScript %}
    <script src="/admin/custom/fooditem-list.js"></script>
{% endblock %}