{% extends "../layouts/master.njk" %}

{% block container %}
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <div class="d-flex flex-column flex-column-fluid">

            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar pt-2 pt-lg-10">
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">
                                {% if plan %}Edit{% else %}Add{% endif %} Plan
                        </h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/plan" class="text-muted text-hover-primary">Plans</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    {% if plan %}Edit{% else %}Add{% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Toolbar-->

            <!--begin::Content-->
            <div id="kt_app_content" class="app-content flex-column-fluid">
                <div id="kt_app_content_container" class="app-container container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Plan Information</h3>
                        </div>

                        <form id="kt_plan_form"
                            class="es-form"
                            action="/admin/plan/save"
                            data-redirect-url="/admin/plan"
                            method="POST"
                            novalidate="novalidate">

                            <input type="hidden" name="id" value="{{ plan.id if plan else '' }}">

                            <div class="card-body">
                                <!-- Plan Name -->
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Plan Name</label>
                                    <div class="col-lg-9">
                                        <input type="text" name="name" class="form-control form-control-lg form-control-solid"
                                           placeholder="Enter plan name" value="{{ plan.name if plan else '' }}" required/>
                                        <div id="field-error-name" class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">Description</label>
                                    <div class="col-lg-9">
                                        <textarea name="description" class="form-control form-control-lg form-control-solid"
                                              rows="3" placeholder="Enter plan description">{{ plan.description if plan else '' }}</textarea>
                                    </div>
                                </div>

                                <!-- Category -->
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Category</label>
                                    <div class="col-lg-9">
                                        <select name="categoryId" class="form-select form-select-solid form-select-lg"
                                            data-control="select2" data-placeholder="Select category" required>
                                            <option value="">Select category...</option>
                                            {% for category in categories %}
                                                <option value="{{ category.id }}" {% if plan and plan.categoryId == category.id %}selected{% endif %}>
                                                    {{ category.name }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                        <div id="field-error-categoryId" class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <!-- Plan Type -->
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Plan Type</label>
                                    <div class="col-lg-9">
                                        <select name="type" id="plan_type" class="form-select form-select-solid form-select-lg"
                                            data-control="select2" data-placeholder="Select type" required>
                                            <option value="">Select type...</option>
                                            <option value="BASIC" {% if plan and plan.type == 'BASIC' %}selected{% endif %}>Basic</option>
                                            <option value="PREMIUM" {% if plan and plan.type == 'PREMIUM' %}selected{% endif %}>Premium</option>
                                            <option value="ULTIMATE" {% if plan and plan.type == 'ULTIMATE' %}selected{% endif %}>Ultimate</option>
                                        </select>
                                        <div class="form-text">Ultimate plan provides unlimited quantity</div>
                                        <div id="field-error-type" class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <!-- Image Upload -->
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">Plan Image</label>
                                    <div class="col-lg-9">
                                        <div class="card card-flush mb-4">
                                            <div class="card-body text-center">
                                                <div class="dropzone dropzone-single" id="planImageDropzone">
                                                    <div class="dz-message needsclick">
                                                        <i class="ki-outline ki-file-up text-primary fs-3x"></i>
                                                        <div class="ms-4">
                                                            <h3 class="fs-5 fw-bold text-gray-900 mb-1">
                                                                Drop plan image here or click to upload.
                                                            </h3>
                                                            <span class="fs-7 fw-semibold text-gray-500">
                                                                Only one image allowed
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Hidden input for storing uploaded image URL -->
                                                <input type="hidden" name="imageUrl" id="planImageUrl" value="{{ plan and plan.imageUrl or '' }}">
                                                <div id="field-error-imageUrl" class="fv-plugins-message-container invalid-feedback"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Sort Order -->
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">Sort Order</label>
                                    <div class="col-lg-9">
                                        <input type="number" name="sortOrder" class="form-control form-control-lg form-control-solid"
                                           placeholder="Enter display order" min="0" value="{{ plan.sortOrder if plan else 0 }}"/>
                                        <div class="form-text">Determines order of display in list</div>
                                    </div>
                                </div>

                                <!-- Is Active -->
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">Status</label>
                                    <div class="col-lg-9 d-flex align-items-center">
                                        <div class="form-check form-switch form-switch-sm form-check-custom form-check-solid">
                                            <input class="form-check-input" type="checkbox" name="isActive" value="true"
                                               {% if plan and plan.isActive %}checked{% endif %}/>
                                        </div>
                                        <span class="ms-2 text-muted">Active</span>
                                    </div>
                                </div>

                                <!-- Is Unlimited -->
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">Unlimited</label>
                                    <div class="col-lg-9 d-flex align-items-center">
                                        <div class="form-check form-switch form-switch-sm form-check-custom form-check-solid">
                                            <input class="form-check-input" type="checkbox" name="isUnlimited" value="true"
                                               {% if plan and plan.isUnlimited %}checked{% endif %}/>
                                        </div>
                                        <span class="ms-2 text-muted">Mark as unlimited plan</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Footer -->
                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                <a href="/admin/plan" class="btn btn-light btn-active-light-primary me-2">Cancel</a>
                                <button type="submit" class="btn btn-primary form-submit-btn" id="submit_btn">
                                    <span class="indicator-label label">
                                        {% if plan %}Update{% else %}Create{% endif %} Plan</span>
                                    <span class="preloader indicator-progress d-nones">Please wait...
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--end::Content-->
        </div>

        <!--begin::Footer-->
        {% include '../partials/_footer-panel.njk' %}
        <!--end::Footer-->
    </div>
{% endblock %}

{% block customScript %}
    <script src="/admin/common/es-form.js"></script>
    <script src="/admin/common/form-data-json.min.js"></script>
    <script src="/admin/common/single-image-dropzone.js"></script>
    <script src="/admin/custom/plan-image-dropzone.js"></script>
{% endblock %}