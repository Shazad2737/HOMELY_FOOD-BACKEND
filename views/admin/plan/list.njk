{% extends "../layouts/master.njk" %}

{% block container %}
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <div class="d-flex flex-column flex-column-fluid">
            <div id="kt_app_toolbar" class="app-toolbar pt-2 pt-lg-10">
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">All Plans</h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">Plans</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div id="kt_app_content" class="app-content flex-column-fluid">
                <div id="kt_app_content_container" class="app-container container-fluid">
                    <div class="card card-flush">
                        <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                            <div class="card-title">
                                <div class="d-flex align-items-center position-relative my-1">
                                    <i class="ki-outline ki-magnifier fs-3 position-absolute ms-4"></i>
                                    <input type="text" data-kt-plan-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="Search plan"/>
                                </div>
                            </div>

                            <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
                                <div class="w-100 mw-150px">
                                    <select id="plan_type_filter" class="form-select form-select-solid" data-control="select2" data-hide-search="true">
                                        <option value="">All Types</option>
                                        <option value="BASIC">Basic</option>
                                        <option value="PREMIUM">Premium</option>
                                        <option value="ULTIMATE">Ultimate</option>
                                    </select>
                                </div>

                                <div class="w-100 mw-150px">
                                    <select id="plan_status_filter" class="form-select form-select-solid" data-control="select2" data-hide-search="true">
                                        <option value="">All Status</option>
                                        <option value="active">Active</option>
                                        <option value="inactive">Inactive</option>
                                    </select>
                                </div>

                                <a href="/admin/plan/add" class="btn btn-primary">
                                    <i class="ki-outline ki-plus fs-2"></i>
                                    Add Plan
                                </a>
                            </div>
                        </div>

                        <div class="card-body pt-0">
                            <table class="table align-middle table-row-dashed fs-6 gy-5" id="plan_table">
                                <thead>
                                    <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                                        <th class="min-w-100px">Image</th>
                                        <th class="min-w-200px">Plan Name</th>
                                        <th class="min-w-150px">Category</th>
                                        <th class="min-w-100px">Type</th>
                                        <th class="min-w-70px">Status</th>
                                        <th class="text-center min-w-100px">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="fw-semibold text-gray-600"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            {% include '../partials/_footer-panel.njk' %}
        </div>
    </div>
{% endblock %}

{% block customScript %}
    <script src="/admin/custom/plan-list.js"></script>
{% endblock %}