{% extends "../layouts/master.njk" %}

{% block container %}
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <div class="d-flex flex-column flex-column-fluid">
            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar pt-2 pt-lg-10">
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">
                                {% if location %}Edit{% else %}Add{% endif %} Location
                            </h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/location" class="text-muted text-hover-primary">Locations</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">
                                    {% if location %}Edit{% else %}Add{% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Toolbar-->

            <!--begin::Content-->
            <div id="kt_app_content" class="app-content flex-column-fluid">
                <div id="kt_app_content_container" class="app-container container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Location Information</h3>
                        </div>

                        <form id="kt_location_form"
                            class="form es-form"
                            action="/admin/location/save"
                            data-redirect-url="/admin/location"
                            method="POST"
                            autocomplete="off">

                            <input type="hidden" name="id" value="{{ location.id }}">

                            <div class="card-body">
                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Location Name</label>
                                    <div class="col-lg-9">
                                        <input type="text" name="name" class="form-control form-control-lg form-control-solid" 
                                               placeholder="Enter location name (e.g., Abu Dhabi)" value="{{ location.name if location else '' }}"/>
                                        <div id="field-error-name" class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Location Code</label>
                                    <div class="col-lg-9">
                                        <input type="text" name="code" class="form-control form-control-lg form-control-solid" 
                                               placeholder="Enter location code (e.g., AUH)" value="{{ location.code if location else '' }}" 
                                               maxlength="10" style="text-transform: uppercase;"/>
                                        <div class="form-text">Unique code for the location (will be converted to uppercase)</div>
                                        <div id="field-error-code" class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label required fw-semibold fs-6">Country</label>
                                    <div class="col-lg-9">
                                        <select name="countryId" class="form-select form-select-solid form-select-lg" data-control="select2" 
                                                data-placeholder="Select country">
                                            <option value="">Select country...</option>
                                            {% for country in countries %}
                                                <option value="{{ country.id }}" {% if location and location.countryId == country.id %}selected{% endif %}>
                                                    {{ country.name }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                        <div id="field-error-countryId" class="fv-plugins-message-container invalid-feedback"></div>
                                    </div>
                                </div>

                                <div class="row mb-6">
                                    <label class="col-lg-3 col-form-label fw-semibold fs-6">
                                        Coordinates
                                        <span class="ms-1" data-bs-toggle="tooltip" title="GPS coordinates for the location">
                                            <i class="ki-outline ki-information-5 text-gray-500 fs-6"></i>
                                        </span>
                                    </label>
                                    <div class="col-lg-9">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <input type="text" name="latitude" class="form-control form-control-lg form-control-solid" 
                                                       placeholder="Latitude (e.g., 24.4539)" value="{{ location.latitude if location else '' }}"/>
                                                <div class="form-text">Latitude coordinate</div>
                                            </div>
                                            <div class="col-md-6">
                                                <input type="text" name="longitude" class="form-control form-control-lg form-control-solid" 
                                                       placeholder="Longitude (e.g., 54.3773)" value="{{ location.longitude if location else '' }}"/>
                                                <div class="form-text">Longitude coordinate</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer d-flex justify-content-end py-6 px-9">
                                <a href="/admin/location" class="btn btn-light btn-active-light-primary me-2">Cancel</a>
                                <button type="submit" class="btn btn-primary form-submit-btn" id="submit_btn">
                                    <span class="indicator-label label">
                                        {% if location %}Update{% else %}Create{% endif %} Location</span>
                                    <span class="preloader indicator-progress d-nones">Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--end::Content-->
        </div>

        <!--begin::Footer-->
        {% include '../partials/_footer-panel.njk' %}
        <!--end::Footer-->
    </div>
{% endblock %}

{% block customScript %}
    <script src="/admin/common/es-form.js"></script>
    <script src="/admin/common/form-data-json.min.js"></script>
    <script>
        // Auto-uppercase code field
        document
                .querySelector('input[name="code"]')
                ?
                .addEventListener('input', function (e) {
                    this.value = this
                        .value
                        .toUpperCase();
                });
    </script>
{% endblock %}