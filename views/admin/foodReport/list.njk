{% extends "../layouts/master.njk" %}

{% block container %}
    <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
        <div class="d-flex flex-column flex-column-fluid">
            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar pt-2 pt-lg-10">
                <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
                    <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                        <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                            <h1 class="page-heading d-flex flex-column justify-content-center text-gray-900 fw-bold fs-3 m-0">
                                Food Item Count by Days
                            </h1>
                            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                                <li class="breadcrumb-item text-muted">
                                    <a href="/admin/dashboard" class="text-muted text-hover-primary">Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">Reports</li>
                                <li class="breadcrumb-item">
                                    <span class="bullet bg-gray-500 w-5px h-2px"></span>
                                </li>
                                <li class="breadcrumb-item text-muted">Food Item Count</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Toolbar-->

            <!--begin::Content-->
            <div id="kt_app_content" class="app-content flex-column-fluid">
                <div id="kt_app_content_container" class="app-container container-fluid">
                    <div class="card card-flush">
                        <!--begin::Card header-->
                        <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                            <div class="card-toolbar flex-row-fluid justify-content-between gap-3">

                                <!--begin::Left Filters-->
                                <div class="d-flex flex-wrap align-items-center gap-3">

                                    <!--begin::Date Navigation-->
                                    <div class="btn-group">
                                        <button type="button" id="prev_day_btn" class="btn btn-sm btn-light-primary">
                                            <i class="ki-outline ki-arrow-left fs-3"></i>
                                        </button>
                                        <button type="button" id="today_btn" class="btn btn-sm btn-primary">
                                            <i class="ki-outline ki-calendar-tick fs-3 me-1"></i> Today
                                        </button>
                                        <button type="button" id="next_day_btn" class="btn btn-sm btn-light-primary">
                                            <i class="ki-outline ki-arrow-right fs-3"></i>
                                        </button>
                                    </div>
                                    <!--end::Date Navigation-->

                                    <!--begin::Date Range filter-->
                                    <div class="mw-200px">
                                        <input type="text" id="date_range_filter" class="form-control form-control-solid" placeholder="Select date range" readonly/>
                                    </div>
                                    <!--end::Date Range filter-->

                                    <!--begin::Meal Type filter-->
                                    <div class="mw-150px">
                                        <select id="mealtype_filter" class="form-select form-select-solid" data-control="select2" data-placeholder="Meal Type" data-hide-search="true">
                                            <option></option>
                                            <option value="">All Meal Types</option>
                                        </select>
                                    </div>
                                    <!--end::Meal Type filter-->

                                    <!--begin::Category filter-->
                                    <div class="mw-150px">
                                        <select id="category_filter" class="form-select form-select-solid" data-control="select2" data-placeholder="Category" data-hide-search="true">
                                            <option></option>
                                            <option value="">All Categories</option>
                                        </select>
                                    </div>
                                    <!--end::Category filter-->

                                    <!--begin::Plan filter-->
                                    <div class="mw-150px">
                                        <select id="plan_filter" class="form-select form-select-solid" data-control="select2" data-placeholder="Plan" data-hide-search="true">
                                            <option></option>
                                            <option value="">All Plans</option>
                                        </select>
                                    </div>
                                    <!--end::Plan filter-->

                                    <!--begin::Clear Filters-->
                                    <button type="button" id="clear_filters_btn" class="btn btn-icon btn-light" title="Clear filters">
                                        <span class="svg-icon svg-icon-2">
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <rect opacity="0.5" x="7.05025" y="15.5356" width="12" height="2" rx="1" transform="rotate(-45 7.05025 15.5356)" fill="currentColor"/>
                                                <rect x="8.46447" y="7.05029" width="12" height="2" rx="1" transform="rotate(45 8.46447 7.05029)" fill="currentColor"/>
                                            </svg>
                                        </span>
                                    </button>
                                    <!--end::Clear Filters-->

                                </div>
                                <!--end::Left Filters-->

                                <!--begin::Right Actions-->
                                <div class="d-flex align-items-center gap-2 flex-shrink-0">

                                    <!--begin::View Toggle-->
                                    <div class="btn-group">
                                        <button type="button" id="grid_view_btn" class="btn btn-sm btn-icon btn-light-primary" title="Grid View">
                                            <i class="ki-outline ki-element-11 fs-2"></i>
                                        </button>
                                        <button type="button" id="list_view_btn" class="btn btn-sm btn-icon btn-primary active" title="List View">
                                            <i class="ki-outline ki-row-horizontal fs-2"></i>
                                        </button>
                                    </div>
                                    <!--end::View Toggle-->

                                    <!--begin::Export Excel-->
                                    <button type="button" id="export_btn" class="btn btn-sm btn-light-success">
                                        <i class="ki-outline ki-exit-down fs-2"></i>
                                    </button>
                                    <!--end::Export Excel-->

                                    <!--begin::Refresh-->
                                    <button type="button" id="refresh_btn" class="btn btn-sm btn-light">
                                        <i class="ki-outline ki-arrows-circle fs-2"></i>
                                    </button>
                                    <!--end::Refresh-->

                                </div>
                                <!--end::Right Actions-->

                            </div>
                        </div>

                        <!--end::Card header-->

                        <!--begin::Card body-->
                        <div class="card-body pt-0">
                            <!--begin::Summary-->
                            <div class="row g-5 mb-7">
                                <div class="col-sm-6 col-xl-3">
                                    <div class="card card-flush border border-dashed border-gray-300 h-100">
                                        <div class="card-body text-center">
                                            <i class="ki-outline ki-calendar fs-2x text-primary mb-3"></i>
                                            <div class="fs-6 text-gray-800 fw-bold">Total Days</div>
                                            <div class="fs-2hx fw-bold text-gray-900" id="total_days">0</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-xl-3">
                                    <div class="card card-flush border border-dashed border-gray-300 h-100">
                                        <div class="card-body text-center">
                                            <i class="ki-outline ki-burger-menu-3 fs-2x text-success mb-3"></i>
                                            <div class="fs-6 text-gray-800 fw-bold">Total Food Items</div>
                                            <div class="fs-2hx fw-bold text-gray-900" id="total_food_items">0</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-xl-3">
                                    <div class="card card-flush border border-dashed border-gray-300 h-100">
                                        <div class="card-body text-center">
                                            <i class="ki-outline ki-abstract-26 fs-2x text-info mb-3"></i>
                                            <div class="fs-6 text-gray-800 fw-bold">Total Orders</div>
                                            <div class="fs-2hx fw-bold text-gray-900" id="total_orders">0</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-xl-3">
                                    <div class="card card-flush border border-dashed border-gray-300 h-100">
                                        <div class="card-body text-center">
                                            <i class="ki-outline ki-chart-simple-2 fs-2x text-warning mb-3"></i>
                                            <div class="fs-6 text-gray-800 fw-bold">Avg Items/Day</div>
                                            <div class="fs-2hx fw-bold text-gray-900" id="avg_items_per_day">0</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--end::Summary-->

                            <!--begin::Grid View-->
                            <div id="grid_view_container" class="d-none">
                                <div class="row g-6 g-xl-9" id="grid_view_items">
                                    <!-- Grid items will be inserted here by JavaScript -->
                                </div>

                                <!--begin::Pagination-->
                                <div class="d-flex flex-stack flex-wrap pt-10">
                                    <div class="fs-6 fw-semibold text-gray-700" id="grid_pagination_info">
                                        Showing 0 to 0 of 0 entries
                                    </div>
                                    <ul class="pagination" id="grid_pagination">
                                        <!-- Pagination will be inserted here -->
                                    </ul>
                                </div>
                                <!--end::Pagination-->
                            </div>
                            <!--end::Grid View-->

                            <!--begin::List View-->
                            <div id="list_view_container">
                                <table class="table align-middle table-row-dashed fs-6 gy-5" id="food_count_table">
                                    <thead>
                                        <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                                            <th class="min-w-100px">Date</th>
                                            <th class="min-w-80px">Day</th>
                                            <th class="min-w-150px">Food Item</th>
                                            <th class="min-w-120px">Meal Type</th>
                                            <th class="min-w-100px">Category</th>
                                            <th class="min-w-80px">Plan</th>
                                            <th class="min-w-80px text-center">Count</th>
                                            <th class="min-w-100px text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="fw-semibold text-gray-600"></tbody>
                                    <tfoot>
                                        <tr class="fw-bold text-gray-700 fs-6">
                                            <th colspan="6" class="text-end">Total:</th>
                                            <th class="text-center" id="footer_total_count">0</th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!--end::List View-->
                        </div>
                        <!--end::Card body-->
                    </div>
                </div>
            </div>
            <!--end::Content-->
        </div>

        <!--begin::Footer-->
        {% include '../partials/_footer-panel.njk' %}
        <!--end::Footer-->
    </div>
{% endblock %}

{% block customScript %}
    <script src="/admin/custom/food-report.js"></script>
{% endblock %}